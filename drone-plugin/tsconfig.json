{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"],
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "outDir": "dist",
    "baseUrl" : ".",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "node_modules/**/*"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
