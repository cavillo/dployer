{
  "compilerOptions": {
    "paths": { 
      "*": ["types/*"],
      "@lib*": [
        "src/lib/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "outDir": "dist",
    "baseUrl" : "src",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
